<html lang="en">
    <head>
        <title>find</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="../../main.css">
    </head>
    <body>
    <h2>Поиск манги</h2>
    <form method="post">
        <label>
            <input name="originalTitle" size="50" {{#manga}} value="{{manga.originalTitle}}" {{/manga}} required>
            <input value="Поиск" type="submit">
        </label>
    </form>
    <div>
        <a href="../../title"><--</a>
    </div>
    <table class="wide">
        <tr>
            <th>NameEn</th>
            <th>NameRu</th>
            <th>Score</th>
            <th>chapters</th>
        </tr>

        {{#list}}
            <tr>
                <td>{{name}}</td>
                <td>{{russian}}</td>
                <td>{{score}}</td>
                <td>{{chapters}}</td>
                <td>
                    <form method="post" action="./saveManga">
                        <label>
                            <input name="mangaId" value="{{id}}" hidden>
                            <input value="Добавить" type="submit">
                        </label>
                    </form>
                </td>
            </tr>
        {{/list}}
    </table>

    </body>
</html>