<body>
<h2>Поиск аниме</h2>


<form method="post">
    <input name="originalTitle" {{#anime}} value="{{anime.originalTitle}}" {{/anime}} required><p>
    <input value="Поиск" type="submit"><p>
</form>
<label>Название</label>
<table>
    <tr>
        <id>ID</id>
        <th>NameEn</th>
        <th>NameRu</th>
        <th>Score</th>
        <th>Episodes</th>
    </tr>

    {{#list}}
        <tr>
            <td>{{id}}</td>
            <td>{{name}}</td>
            <td>{{russian}}</td>
            <td>{{score}}</td>
            <td>{{episodes}}</td>
            <td>
                <form method="post" action="./saveAnime">
                    <input name="animeId" value="{{id}}">
                    <input value="Добавить" type="submit">
                </form>
            </td>
        </tr>
    {{/list}}
</table>

